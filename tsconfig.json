{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",           // Önemli: CommonJS yerine NodeNext
    "moduleResolution": "NodeNext", // Önemli
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    // verbatimModuleSyntax hatası almaya devam ederseniz bu satırı "false" yapabilirsiniz:
    "verbatimModuleSyntax": true
  },
  "ts-node": {
    "esm": true
  }
}