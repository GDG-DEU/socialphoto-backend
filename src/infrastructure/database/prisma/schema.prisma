generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Post {
  id             String   @id @default(cuid())
  user_id        String
  image_url      String
  title          String
  aestheticScore Float?   @default(0.0)
  vectorId       String?
  created_at     DateTime @default(now()) @db.Timestamp(6)
  updated_at     DateTime @updatedAt @db.Timestamp(6)
  user           User     @relation(fields: [user_id], references: [id])
}

model User {
  id            String   @id @default(cuid())
  username      String   @unique
  email         String   @unique
  password_hash String   // @default("") sildik, zorunlu yaptık
  is_verified   Boolean  @default(false) // Bunu ekle kanka (Şart!)
  bio           String?  @default("")
  avatar_url    String?  @default("")
  created_at    DateTime @default(now()) @db.Timestamp(6)
  updated_at    DateTime @updatedAt @db.Timestamp(6) // Bunu da ekle
  posts         Post[]
}
